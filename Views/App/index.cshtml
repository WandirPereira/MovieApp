@model IEnumerable<MovieViewModel>
@{
    ViewBag.Title = "Home Page";
}

<table class="table">
    <thead>
        <tr>
            <th>
                Nombre
            </th>
            <th>
                Genero
            </th>
            <th>
                <a asp-controller="App" asp-action="AddOrEdit" class="btn btn-primary">Agregar Pel√≠cula</a>
            </th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
      <tr>
          <td>
              @item.Name
          </td>
          <td>
              @item.Genre
          </td>
          <td>
              <a asp-action="AddOrEdit" asp-route-id="@item.Id">Editar</a>
          </td>
      </tr> 
    } 


    

</table>

